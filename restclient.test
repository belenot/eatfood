#VARIABLES
:host = http://localhost:8082/eatfood
:wideDate = dateFirst=2000-01-01&dateLast=2025-01-01
#
##FOODS
#Add food
POST :host/food/add
Content-Type: application/json

{
    "name": "Сникерс",
    "common": false,
    "nutrients": {
        "calories": 100.0,
        "protein": 5.0,
        "carbohydrate": 1.0,
        "fat": 1.0
    }
}
#Get food by id
GET :host/food/5
#Get food by client
GET :host/food
#Update food
POST :host/food/update
Content-Type: application/json

{
    "id": 3,
    "name": "Сникерс1",
    "nutrients": {
        "calories": 110.12412,
        "protein": 5.64,
        "carbohydrate": 11.0,
        "fat": 1.1
    }
}
#Delete food
GET :host/food/delete/2
#
##DOSES
#Add dose
POST :host/dose/add
Content-Type: application/json

{
    "gram": 1.44,
    "date": "2010-07-20",
    "food": {
        "id": 2
    }
}
#Get dose by id
GET :host/dose/3
#Get dose by food
POST :host/dose/byfood
Content-Type: application/json
{
    "id":2
}
#Get dose by client
GET :host/dose
#Get dose by date interval
GET :host/dose?dateFirst=2019-01-01&dateLast=2019-12-12
#Update dose
POST :host/dose/update
Content-Type: application/json

{
    "id": 3,
    "gram": 1.23,
    "date": "2019-07-20",
    "food": {
        "id": 2
    }
}

#Delete dose
GET :host/dose/delete/3

