#VARIABLES
:host = http://localhost:8080/eatfood
:wideDate = dateFirst=2000-01-01&dateLast=2025-01-01
#
##FOODS
#Add food
POST :host/foodlist/addfood
Content-Type: application/json

{
	"name": "Творожок2",
	"common": false,
	"calories": 100.0,
	"protein": 5.0,
	"carbohydrate": 1.0,
	"fat": 1.0
}
#Update food
POST :host/foodlist/updatefood
Content-Type: application/json

{
	"id": 56,
	"name": "Творожочек",
	"common": "false",
	"calories": 0,
	"protein": 0,
	"carbohydrate": 0.8,
	"fat": 80
}

#Delete food
POST :host/foodlist/deletefood?id=56
#Get foods list
GET :host/foodlist/foods?:wideDate
